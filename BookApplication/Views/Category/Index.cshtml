@using BookApplication.Models.Entitiy;
@model  List<TBLCATEGORIES>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>CATEGORIE ID</th>
        <th>CATEGORIE NAME</th>
        <th>FILTER BOOKS</th>
    </tr>
    <tbody>
        @foreach (var ctgr in Model)
        { 
        <tr>
            <td>@ctgr.CATEGORYID</td>
            <td>@ctgr.CATEGORYNAME</td>
            <td><a href="/CATEGORY/CATEGORYFILTER/@ctgr.CATEGORYID" class=" btn btn-primary">Get Books</a></td>
        </tr>
        }
    </tbody>
</table>



