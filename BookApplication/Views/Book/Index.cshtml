<table class="table table-bordered">
    <tr>
        <th>BOOK ID</th>
        <th>BOOK NAME</th>
        <th>BOOK ISBN</th>
        <th>BOOK CATEGORY</th>
        <th>BOOK AUTHOR</th>
    </tr>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BOOKID</td>
                <td>@book.BOOKNAME</td>
                <td>@book.BOOKISBN</td>
                <td>@book.TBLCATEGORIES.CATEGORYNAME</td>
                <td>@book.BOOKAUTHOR</td>
            </tr>
        }
    </tbody>
</table>
<a href="/BOOK/NEWBOOK" class="btn btn-success">Add Book</a>
