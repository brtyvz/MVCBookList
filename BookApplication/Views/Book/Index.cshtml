@using BookApplication.Models.Entitiy;
@model  List<TBLBOOKS>
    
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("Index", "Book", FormMethod.Get))
{
    <p>
        Book Name: @Html.TextBox("p")
        <input type="submit" value="Search" />
    </p>
}

